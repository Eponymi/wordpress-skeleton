#!/usr/bin/env php
<?php

use Skeleton\Command as Skeleton;
use Symfony\Component\Console\Application;

require __DIR__.'/../vendor/autoload.php';

$console = new Application('WordPress Skeleton', '0.1');
$console->addCommands(array(
    new Skeleton\ConfigureSkeletonCommand('skeleton:configure'),
    new Skeleton\GenerateSkeletonCommand('skeleton:generate'),
    new Skeleton\CreateDatabaseWordPressCommand('wordpress:db:create'),
    new Skeleton\DropDatabaseWordPressCommand('wordpress:db:drop'),
    new Skeleton\InstallWordPressCommand('wordpress:install'),
));
$console->run();
